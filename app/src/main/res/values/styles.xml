<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff6f00</item>
        <item name="colorPrimaryDark">#c43e00</item>
        <item name="colorSecondary">#d84315</item>
        <item name="colorAccent">#d84315</item>
        <item name="android:colorButtonNormal">@color/blueSecLight</item>
        <item name="android:editTextColor">#000000</item>
        <item name="android:buttonCornerRadius">4pt</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorHint">@color/blueSecLight</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
